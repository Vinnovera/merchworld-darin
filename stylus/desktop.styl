/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	.menu {		
		button {
			display: none;
		}
	
		.main-menu {
			ul {
				text-align: center;
				margin: 0 auto;
				height: 50px;
				
				li {
					display: inline-block;
					padding-left: 0px;
					margin-left: 1%;
					margin-right: 1%;
					
					a {
						padding: 15px;
						font-weight: bold;
						float: left;
					}
				}
			}
		}
	}
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	padding-top: 5em;
	
	//style, index.php (shopen)
	.items {
		padding-top: 0%;
		width: 70%;
		
		ul {
			.item {
				//outline: solid red 1px;
				float: left;
				margin: 1.5%;
				width: 22%;
			}
		}
	}
	
	//style, single-item.php (sida d√§r en produkt visas)
	.item-show {
		margin-bottom: 5%;
		overflow: hidden;
		width: 80%;

		.item-image {
			padding-top: 1em;
			padding-bottom: 1em;
			text-align: center;
			width: 44%;
			
			img {
				max-width: 95%;
			}
		}

		.item-image, .item-info {
			float: left;
		}
		
		.item-info {
			padding: 1% 3%;
			width: 50%;
			
			p {
				font-size: 0.8em;
			}
		
			.options {
				width: 100%;
				
				fieldset, .price, button {
					float: left;
				}
				
				fieldset:nth-of-type(2) {
					margin-left: 0.5em;
				}
				
				button {
					margin-left: 1em;
					margin-top: 0;
				}
								
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
			
			.options:nth-of-type(2) {
				height: 50px;
				margin-top: 0.5em;
				
				p {
					line-height: 50px;
					vertical-align: middle
				}
			}
			
			.social-share {
				.social-icon {
					display: inline-block;
					margin: 10px 0;
					width: 23.5%;
				}
			}
		}
	}
}
/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {
	.shopping-cart-item {
		ul{
			width: 75%;			
		}		
	}

	button {
		float: right;
	}
	
	&:after {
		clear: both;
		content: "";
		display: block;
	}
}
/*******************************************************/
/********************** CHECKOUT ***********************/
/*******************************************************/
.checkout-head {
	margin-top: 4px;
	margin-bottom: 4px;
	background: #333;
	
	h1 {
		font-size: 2.1rem;
    	margin-bottom: 3px;
	}
	
	h3 {
		color: white;
		margin: 4px 0 4px 0;
    	padding: 5px 10px;
    }
}

.payment-box-creditcard, .payment-box-invoice, .payment-box-paypal {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: .9em;
	margin: 10px 0 10px 0;

	ul {
		border: 1px solid #aeaeae;
		border-radius: 3px;
		margin: 0;
		padding: 5px;
		padding-top: 12px;

		li {
			list-style-type: none;
			display: inline;

			input {
				width: 1.25em;
				height: 1.25em;
			}
		}
	}
	
 	.payment-title {
		padding-left: 5px;
    	font-size: 0.9em;
    	font-weight: bold;		
	}
	
	.payment-desc {
		margin-left: 15px;
    	font-size: 0.9em;
	}
}

.shipping-container {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	max-width: 515px;
   	overflow: auto;
    padding-bottom: 5px;
    
    ul {
    	margin: 0;
		margin-top: 10px;
		overflow: auto;
		list-style-type: none;
		padding-left: 0px;
		
		li {
			width: 100%;
    		max-width: none;
    		
    		label, span {
	    		font-size: 13px;
    			font-weight: normal;
    			line-height: 18px;
    			cursor: default;
    			
    			a {
    				color: #000;
    				float: left;
    				margin-top: 36px;
    			}
    		}
    		
    		input {
    			display: inline-block;
			    width: 90%;
			    height: 18px;
			    padding: 4px;
			    font-size: 13px;
			    line-height: 18px;
			    color: #555;
			    border: 1px solid #ccc;
			    -webkit-border-radius: 3px;
			    -moz-border-radius: 3px;
			    border-radius: 3px;
			    margin-bottom: 9px;
			    
			    &[type=checkbox] {
			    	float: left;
				    display: inline-block;
				    font-size: 15px;
				    line-height: 1em;
				    margin: 36px .25em 0 0;
				    padding: 0;
				    width: 1.25em;
				    height: 1.25em;
				    -webkit-border-radius: .25em;
				    vertical-align: text-top;
    			}
    		}
    		
    		select {
    			display: inline-block;
			    width: 90%;
			    height: 28px;
			    padding: 4px;
			    font-size: 13px;
			    line-height: 18px;
			    color: #555;
			    border: 1px solid #ccc;
			    -webkit-border-radius: 3px;
			    -moz-border-radius: 3px;
			    border-radius: 3px;
    		}
		}
		
		.getKlarna-btn {
			border-radius: 3px;
			margin-left: 1px;
			margin-top: 9px;
		    padding-left: 0px;
		    font-size: 14px;
		    height: 2em;
		    width: 110px;
    	}
    }	
}

.confirmation-container {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 13px;
	line-height: 18px;
	
	.summary-table {
		width: 100%;
	    margin-bottom: 15px;
    	
    	td {
    		line-height: 18px;
		    text-align: left;
		    border-top: 1px solid #ddd;
    	}
    	
    	th {
    		font-weight: bold;
		    border: 0;
		    text-align: left;
		    padding: 4px 15px 5px 0;
    	}
	}	
}

.message-from-user-container {
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	font-size: 13px;
	line-height: 18px;
	
	button {
		margin-left: 0px;
		margin-top: 0px;
		width: 110px;
		text-transform: uppercase;
		font-family: 'BebasNeueRegular',Helvetica,Arial,sans-serif;
		padding: .1em .5em;
		font-size: 1.5em;
		border-radius: 3px;
	}
	
	.editor-label {
		margin-bottom: 8px;
	}
	
	.editor-field {
		
		textarea{
			border-radius: 4px;
			width: 90%;
			height: 10em;
		}	
	}
}
