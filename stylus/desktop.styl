/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	height: 350px;
	
	img {
    	top: 20px;
	}

	.menu {
		top: 240px;
		
		button {
			display: none;
		}
	
		.main-menu {
			ul {
				text-align: center;
				margin: 0 auto;
				padding-left: 0;
				height: 50px;
				width: 100%;
				
				li {
					display: inline-block;
					margin-right: 1%;
					margin-left: 1%;
					
					a {
						
						padding: 15px;
						font-weight: bold;
						float: left;
					}
				}
			}
		}
	}
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	padding-top: 3.5%;
	
	//style, index.php (shopen)
	.items {
		padding-top: 0%;
		width: 70%;
		
		ul {
			.item {
				float: left;
				margin: 1.5%;
				width: 22%;
			}
		}
	}
	
	//style, single-item.php (sida d√§r en produkt visas)
	.item-show {
		margin-bottom: 5%;
		overflow: hidden;
		width: 80%;

		.item-image{
			width: 44%;
			img {
				max-width: 100%;
			}
		}

		.item-image, .item-info {
			float: left;
		}
		
		.item-info {
			padding: 1% 3%;
			width: 50%;
			
			p{
				font-size: 0.8em;
			}
		
			.options {
				width: 100%;
				
				fieldset, .price, button {
					float: left;
				}
				
				fieldset:nth-of-type(2) {
					margin-left: 0.5em;
				}
				
				button {
					margin-left: 1em;
					margin-top: 0;
				}
								
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
			
			.options:nth-of-type(2) {
				height: 50px;
				margin-top: 1em;
				
				p{
					line-height: 50px;
					vertical-align: middle
				}
			}
		}
	}
}

/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {
	.shopping-cart-item {
		ul{
			width: 75%;			
		}		
	}

	button {
		float: right;
	}
	
	&:after {
		clear: both;
		content: "";
		display: block;
	}
}
/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/
footer {	
	height: 18em;
	outline: solid black 1px;
	width: 100%;

	.contact, .about {
		float: left;
		margin-left: 10em;
	}

	img {
		clear: both;
		display: block;
		margin-left: 10em;
		padding-top: 1em;
	}
}
/*******************************************************/
/******************* LINKS IN FOOTER *******************/
/*******************************************************/
.wrapper{
	width: 100%;
	
	.content{
		padding: 2em 15%;
		width: 45%;
		
		fieldset{
			input, textarea, select{
				width: 40%;
			}
		}
	}
}