/************************ MENU *************************/
/*******************************************************/
header {
	height: 350px;
	
	img {
    	top: 20px;
	}

	.menu {
		top: 240px;
		
		button {
			display: none;
		}
	
		.main-menu {
			ul {
				text-align: center;
				margin: 0 auto;
				height: 50px;
				
				li {
					display: inline-block;
					
					a {
						margin-left: 25px;
						margin-right: 25px;
						padding: 15px;
						font-weight: bold;
						float: left;
					}
				}
			}
		}
	}
}

//ANVÄNDS DENNA?
.fixed {
	position: fixed;
	z-index: 10000;
	top: 0;
	left: 0;
	right: 0;
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	padding-top: 3.5%;
	
	//style, index.php (shopen)
	.items {
		padding-top: 0%;
		width: 70%;
		
		ul {
			.item {
				float: left;
				margin: 1.5%;
				width: 22%;
			}
		}
	}
	
	//style, single-item.php (sida där en produkt visas)
	.item-show {
		margin-bottom: 5%;
		overflow: hidden;
		width: 80%;

		.item-image{
			width: 44%;
			img {
				max-width: 100%;
			}
		}

		.item-image, .item-info {
			float: left;
		}
		
		.item-info {
			padding: 1% 3%;
			width: 50%;
			
			p{
				font-size: 0.8em;
			}
		
			.options {
				width: 100%;
				
				fieldset, .price, button {
					float: left;
				}
				
				fieldset:nth-of-type(2) {
					margin-left: 0.5em;
				}
				
				button {
					margin-left: 1em;
					margin-top: 0;
				}
								
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
			
			.options:nth-of-type(2) {
				height: 50px;
				margin-top: 1em;
				
				p{
					line-height: 50px;
					vertical-align: middle
				}
			}
		}
	}
}

/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {
	background-color: white;
	display: none;
	padding: 1em 2em;
	
	h2 {
		margin-top: 0;
		text-transform: uppercase;
	}
	
	ul {
		list-style-type: none;
		padding-left: 0;
	}
	
	.shopping-cart-item {
		border-top: solid #d3d3d3 2px;
		padding: 0.5em 0;
		
		h3{
			margin-top: 0;
		}

		img {
			height: 100px;
			width: 100px;
		}
		
		img, ul {
			float: left;
		}
		
		ul{
			padding-left: .5em;
		}
		
		&:after {
			clear: both;
			content: "";
			display: block;
		}
	}
	
	button {
		background-color: black;
		border: none;
		color: white;
		float: right;
		height: 50px;
		margin-top: 1em;
		margin-left: 1em;
		width: 200px;

		p {
			font-size: 0.7em;
			line-height: 50px;
			margin-top: 0;
			margin-bottom: 0;
			text-align: center;
			text-transform: uppercase;
			vertical-align: middle;
		}
		
		&:hover {
			background-color: #01ABED;
			color: black;
		}	
	}
	
	&:after {
		clear: both;
		content: "";
		display: block;
	}
}
