/************************ SHOP *************************/
/*******************************************************/
.shop {
	
	//style, index.php (shopen)
	.items {
		width: 70%;
		
		ul { 
			.item {
				float: left;
				margin: 1.5%;
				width: 22%;
			}
		}
	}
	
	//style, single-item.php (sida d√§r en produkt visas)
	.item-show {
		margin-bottom: 5%;
		overflow: hidden;
		width: 80%;

		img { 
			width: 40%;
		}

		.item-info {
			padding: 1% 3%; 
			width: 50%;
			
			.options {
				width: 100%;
				
				fieldset, .price, button {
					float: left;
				}
				
				fieldset:nth-of-type(2) {
					margin-left: 1em;
				}
				
				button {
					margin-left: 2em;
				}
								
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
			
			.options:nth-of-type(2) {
				margin-top: 1em;
			}
		}
		
		img, .item-info {
			float: left;
		}
	}
}
/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/
footer {	
	height: 18em;
	width: 100%;

	.contact, .about {
		float: left;
		margin-left: 5em;
	}

	img {
		clear: both;
		display: block;
		margin-left: 5em;
		padding-top: 1em;
	}
}