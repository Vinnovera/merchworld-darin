/*******************************************************/
/********************** GENERAL ************************/
/*******************************************************/
@font-face {
    font-family: 'Lagom';
    src: url(../fonts/darin/LagomGeometrisk-Regular.ttf);
    src: url(../fonts/darin/LagomGeometrisk-Regular.eot) /* EOT file for IE */
}

body {
	font-family: 'Lagom';

    a {
		text-decoration: none;
	}
}

button {
	background-color: black;
	border: none;
	color: white;
	height: 50px;
	margin-top: 1em;
	width: 200px;

	p {
		font-size: 0.7em;
		line-height: 50px;
		margin-top: 0;
		margin-bottom: 0;
		text-align: center;
		text-transform: uppercase;
		vertical-align: middle;
	}
	
	&:hover {
		background-color: white;
		outline: solid #b8afa7 1px;
		color: black;
	}
	
	&:nth-of-type(2) {
		margin-left: 1em;
	}	
}
/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	background-color: #F9F9F9;
	
	img {
		width: 30px;
		height: 30px;
		background-size: 20px;
		position: absolute;
		left: 10px;
		top: 10px;
	}
	
	.menu {
		width: 100%;
		position: absolute;
		height: 50px;
		background: #b8afa7;
		
		.main-menu{
			ul{
				list-style-type: none;
				padding-left: 0;
				
				li{
					a{
						color: white;
						font-size: 13px;
						letter-spacing: 1px;
						line-height: 20px;
						text-transform: uppercase;
						
					}
				}
			}
		}
	}
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	background-color: #F9F9F9;
	padding-top: 5em;
	padding-bottom: 2em;
	width: 100%;

	//style, index.php (shopen)
	.items {
		margin: 0 auto;
		padding-bottom: 5%;
		padding-top: 2.5%;

		ul {
			list-style-type: none;
			padding: 0px;
    		margin: 0px;
    		overflow: hidden;
    		
    		a {
    			color: black;
    			
    			&:hover {
    				color: black;
    			}
    		}

			.item {				
				img {
					width: 100%;
				}

				.item-info {
					background-color: white;
					margin-top: -10px;
					padding: 1em 1em;

					h2 {
						font-size: 1em;
						text-transform: uppercase;
					}

					p {
						font-size: 0.8em;
					}
				}
			}
		}
	}
	
	//style, single-item.php (sida där en produkt visas)
	.item-show {
		background-color: white;
		font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
		margin: 0 auto;
		position: relative;

		.item-image {
			img {
				//height: auto;
			}
		} 

		.item-info {
			height: 100%;
			
			p {
				font-weight: normal;
				font-size: 0.8em;
			}

			.options{
				h3 {
					text-transform: uppercase;
				}

				fieldset {
					border: none;
					margin-left: 0;
					padding-left: 0;
									
					select {
						height: 28px;
    					line-height: 28px;
						width: 200px;
					}
				}

				h3 {
					font-size: 1.1em;
				}
				
				p{
					margin-top: 0;
					margin-bottom: 0;
				}

				.price {
					font-size: 2em;
					font-weight: bold;
				}
			}
			
			.social-share {
				margin-top: 1em;

				.social-icon {
					height: 30px;
					outline: solid black 1px;
				}
			}

			//bakåtlänk till shoppen
			.back {
				height: 0.8em;
				margin-top: 1.5em;
				margin-bottom: 1em;
				
				a {
					color: black;
					
					&:visited {
						color: black;
					}
					
					&:after {
						clear: both;
						content: "";
						display: block;
					}
					
					.fa, p {
						float: right;
						font-size: 0.8em;
						line-height: 0.8em;
						vertical-align: middle;
					}
					
					.fa {
						margin-right: 0.4em;
					}
					
					p {
						margin-top: 0;
						margin-bottom: 0;
					}
				}
			}
		}
	}
}
/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {
	background-color: white;
	display: none;
	padding: 1em 2em;
	
	h2 {
		margin-top: 0;
		text-transform: uppercase;
	}
	
	ul {
		border-bottom: solid #d3d3d3 2px;
		list-style-type: none;
		padding-left: 0;
	}
	
	.shopping-cart-item {
		border-top: solid #d3d3d3 2px;
		padding: 0.5em 0;
		
		h3 {
			margin-top: 0;
			margin-bottom: 0.4em;

		}

		img {
			height: 100px;
			width: 100px;
		}
		
		img, ul {
			float: left;
		}
		
		ul {
			border-bottom: none;
			padding-left: .5em;
			
			span {
				font-weight: normal;
				font-size: 0.8em;			
			}	
		}
		
		&:after {
			clear: both;
			content: "";
			display: block;
		}
		
		li:last-of-type {
			color: red;
			//float: right;
		}
		
		button {
			margin: 0 auto;
		}
	
		.fa {
			padding-left: .5em;
		}
	}
}
