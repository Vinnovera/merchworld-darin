/*******************************************************/
/********************** GENERAL ************************/
/*******************************************************/
@font-face {
    font-family: 'Lagom';
    src: url(../fonts/darin/LagomGeometrisk-Regular.ttf);
}

body {
	font-family: 'Lagom';

    a {
		text-decoration: none;
		color: blue;
	}
}
/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	background-color: black;
	
	img {
		width: 200px;
		height: 200px;
		background-size: 200px;
		position: absolute;
		left: 50%;
		margin-left: -100px;
	}
	
	.menu {
		width: 100%;
		position: absolute;
		height: 50px;
		background: #b8afa7;
		
		.main-menu{
			ul{
				list-style-type: none;
				
				li{
					a{
						color: white;
						font-size: 13px;
						letter-spacing: 1px;
						line-height: 20px;
						text-transform: uppercase;
						
					}
				}
			}
		}
	}
}
/*******************************************************/
/************************ SHOP *************************/
/*******************************************************/
.shop {
	background-color: black;
	padding-top: 5%;
	padding-bottom: 5%;
	width: 100%;

	//style, index.php (shopen)
	.items {
		margin: 0 auto;
		padding-bottom: 5%;
		padding-top: 2.5%;

		ul {
			list-style-type: none;
			padding: 0px;
    		margin: 0px;
    		overflow: hidden;
    		
    		a {
    			color: black;
    			
    			&:hover {
    				color: black;
    			}
    		}

			.item {
				float: none;
				
				img {
					width: 100%;
				}

				.item-info {
					background-color: white;
					padding: 0.5em 1em;

					h2 {
						font-size: 1em;
						text-transform: uppercase;
					}

					p {
						font-size: 0.8em;
					}
				}
			}
		}
	}
	
	//style, single-item.php (sida där en produkt visas)
	.item-show {
		background-color: white;
		font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
		margin: 0 auto;
		position: relative;

		.item-image {
			img {
				height: auto;
			}
		} 

		.item-info {
			
			p {
				font-weight: normal;
			}

			.options{
				fieldset {
					border: none;
					margin-left: 0;
					padding-left: 0;
				}

				h3 {
					font-size: 1.1em;
				}
				
				p{
					margin-top: 0;
					margin-bottom: 0;
				}

				.price {
					font-size: 2em;
					font-weight: bold;
				}

				button {
					background-color: black;
					border: none;
					color: white;
					height: 50px;
					margin-top: 1em;
					width: 200px;

					p {
						font-size: 0.7em;
						line-height: 50px;
						text-align: center;
						text-transform: uppercase;
						vertical-align: middle;
					}
					
					&:hover {
						background-color: #01ABED;
						color: black;
					}	
				}
			}
			
			//bakåtlänk till shoppen
			.back {
				margin-top: 1.5em;
				margin-bottom: 1em;
				
				a {
					color: black;
					
					&:visited {
						color: black;
					}
					
					&:after {
						clear: both;
						content: "";
						display: block;
					}
					
					.fa, p {
						float: right;
						line-height: 1em;
						vertical-align: middle;
					}
					
					.fa {
						margin-right: 0.4em;
					}
					
					p {
						margin-top: 0;
						margin-bottom: 0;
					}
				}
			}
		}
	}
}

/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/
footer{
	background-color: #363636;
	color: white;
	outline: solid black 1px;
	width: 100%;

	h5{
		text-transform: uppercase;
	}

	ul{
		list-style-type: none;
		padding: 0px;
    	margin: 0px;
		li{
			font-size: 0.7em;
			padding-bottom: 1em;
		
			a{
				color: white;
				
				&:visited{
					color: white;	
				}
				
				&:hover{
				color: grey;
				}
			}
		}	
	}

	.contact, .about{
		float: none;
		margin-left: 1.5em;
		padding-top: 1em;
		padding-bottom: 1em;
	}
	
	img{
		display: none;
	}
}
/*******************************************************/
/******************* LINKS IN FOOTER *******************/
/*******************************************************/
.wrapper{
	background-color: black;
	margin-top: 25%;
	width: 100%;
	.content{
		background-color: white;
		margin: 0 auto;
		outline: solid red 1px;

		h1, h2, h3{
			text-transform: uppercase;
		}

		h1{
			font-size: 1.8em;
			margin-bottom: 0;
		}

		h2{
			font-size: 1.3em;
			margin-bottom: 0;
			padding-top: 1.3em;
		}

		h3{
			font-size: 0.9em;
			margin-bottom: 0;
			padding-top: 0.5em;
		}
		
		h4{
			font-size: 0.9em;
			margin-bottom: 0;
		}

		p{
			font-size: 0.9em;
			line-height: 18px;
			margin-top: 0.4em;
		}

		fieldset{
			border: none;
			padding-left: 0;

			input[type=text], textarea {
			    display: block;
			}

			input, textarea, select{
				color: black;
				margin-bottom: 5%;
				margin-top: 1%;
				padding: 1%;
			}

			textarea{
    			height: 100px;
    		}
    		
    		button {
				background-color: black;
				border: none;
				color: white;
				height: 50px;
				width: 200px;

				p {
					font-size: 1em;
					line-height: 50px;
					margin: 0;
					text-align: center;
					text-transform: uppercase;
					vertical-align: middle;
				}
				
				&:hover {
					background-color: #01ABED;
					color: black;
				}	
			}
		}
	}
}