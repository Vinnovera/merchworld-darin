/********************** CHECKOUT ***********************/
/*******************************************************/



/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/
footer {
	background-color: #363636;
	color: white;
	outline: solid black 1px;
	width: 100%;

	h5 {
		text-transform: uppercase;
	}

	ul {
		list-style-type: none;
		padding: 0px;
    	margin: 0px;
    	
		li {
			font-size: 0.7em;
			padding-bottom: 1em;
		
			a {
				color: white;
				
				&:visited {
					color: white;	
				}
				
				&:hover {
					color: grey;
				}
			}
		}	
	}

	.contact, .about {
		float: none;
		margin-left: 1.5em;
		padding-top: 1em;
		padding-bottom: 1em;
	}
	
	img {
		display: none;
	}
}
/*******************************************************/
/******************* LINKS IN FOOTER *******************/
/*******************************************************/
.wrapper {
	background-color: #F9F9F9;
	padding-bottom: 5%;
	width: 100%;
	
	.content {
		background-color: white;
		margin: 0 auto; 

		h1, h2, h3 {
			text-transform: uppercase;
		}

		h1 {
			font-size: 1.8em;
			margin-bottom: 0;
		}

		h2 {
			font-size: 1.3em;
			margin-bottom: 0;
			padding-top: 1.3em;
		}

		h3 {
			font-size: 0.9em;
			margin-bottom: 0;
			padding-top: 0.5em;
		}
		
		h4 {
			font-size: 0.9em;
			margin-bottom: 0;
		}

		p {
			font-size: 0.9em;
			line-height: 18px;
			margin-top: 0.4em;
		}
		
		a {
			color: black;
			text-decoration: underline;
			
			&:hover {
				font-weight: bold;
			}
		}

		fieldset {
			border: none;
			
			padding-left: 0;

			input[type=text], textarea {
			    display: block;
			}
			
			input, textarea, select {
				color: black;
				font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
				margin-bottom: 5%;
				margin-top: 1%;
				padding: 1%;
			}

			textarea {
    			height: 100px;
    		}
		}
	}
}