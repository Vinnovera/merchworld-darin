/*******************************************************/
/********************** VARUKORG ***********************/
/*******************************************************/
#shopping-cart {
	background-color: white;
	display: none;
	padding: 1em 1em;
	
	h1{
		margin: 0;
	}

	table, thead, tbody, th, td, tr { 
		display: block; 
	}
	
	thead tr { 
		position: absolute;
		top: -9999px;
		left: -9999px;
	}
	

	
	td:before { 
		/* Now like a table header */
		position: absolute;
		/* Top/left values mimic padding */
		top: 6px;
		left: 6px;
		width: 45%; 
		padding-right: 10px;
	}
	tbody {
		td { 
		/* Behave  like a "row" */
		border: none;
		position: relative;
		padding-left: 50%; 
		}
		
		td:nth-of-type(2):before { content: "Titel"; }
		td:nth-of-type(3):before { content: "Färg/Storlek"; }
		td:nth-of-type(4):before { content: "Antal"; }
		td:nth-of-type(5):before { content: "Pris"; }
		td:nth-of-type(6):before { content: "Ta bort"; }		
	}

}


