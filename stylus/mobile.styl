/*******************************************************/
/************************ MENU *************************/
/*******************************************************/
header {
	.menu {
		button {
			width: 44px;
			height: 34px;
			float: right;
	  		position: relative;
	        -webkit-appearance: none;
	  		border: 1px solid #ddd;
	  		border-radius: 4px;
	  		padding: 9px 10px;
	    	margin-top: 8px;
	    	margin-right: 15px;
	    	margin-bottom: 8px;
	  		background: transparent;
	  		text-indent: -9999px;
	  		
	 		&:after {
	  			width: 22px;
	  			content: '';
	  			position: absolute;
	  			left: 10px;
	  			bottom: 9px;
	  			right: 11px;
	  			border-bottom: 2px solid white;
			}
			
			&:before {
	    		content: '';
	    		width: 22px;
	    		height: 4px;
	  			position: absolute;
	  			left: 10px;
	  			right: 11px;
	  			top: 11px;
	  			margin-top: -2px;
	  			border-top: 2px solid white;
	  			border-bottom: 2px solid white;
			}
			
			&:hover {
				background-color: #ddd;
				
			}
		}
	
		.main-menu {
			background: #b8afa7;
			margin-top: 50px;
			position: relative;
			z-index: 1;
			
			ul {
				border-top: 1px solid white;
				display: none;
				margin-top: 0px;
				margin-bottom: 0px;
				padding-left: 0px;
				
				li {
					padding: 10px 15px 10px 15px;
					text-align: center;
					display: block;
				}
			}
		}
	}
}
